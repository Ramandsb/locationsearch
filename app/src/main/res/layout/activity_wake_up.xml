<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.koko.koko.WakeUpAct"
    android:padding="20dp"
    android:background="@drawable/background0">



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Reject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#FF0011"
        android:elevation="20dp"
        app:borderWidth="0dp"
        android:src="@drawable/close"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/Accept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Accept"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#21D130"
        android:elevation="20dp"
        app:borderWidth="0dp"
        android:src="@drawable/check"
        android:layout_marginRight="50dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="71dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/mcab_no"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mtime" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/mtime"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_above="@+id/to"
        android:layout_alignStart="@+id/to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/to"
        android:textColor="#ffffff"
        android:layout_above="@+id/from"
        android:layout_alignStart="@+id/from" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#ffffff"
        android:id="@+id/from"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Accept" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Accept"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/Accept" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reject"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Reject"
        android:layout_alignEnd="@+id/Reject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView8"
        android:textColor="#eeeeee"
         />

</RelativeLayout>
